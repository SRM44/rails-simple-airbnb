<h1>All our flats (<%= @flats.count %>)</h1>
<br>
<div class="cards">
<% @flats.each do |flat| %>
  <div class="card-trip">
    <img src="https://source.unsplash.com/user/hernanlucio" />
      <div class="card-trip-infos">
        <div>
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
        </div>
        <h2 class="card-trip-pricing"><%= flat.price %> $</h2>
        <p><%= flat.guests %></p>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      </div>
  </div>
<% end %>
</div>
